{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run all tests",
			"type": "shell",
			"command": "cmd.exe",
			"args": [
				"/d",
				"/c",
				".venv\\Scripts\\python -m pytest backend/tests/ -v"
			],
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"group": {
				"kind": "test",
				"isDefault": true
			}
		},
		{
			"label": "Test Ranking Algorithm",
			"type": "shell",
			"command": "cmd.exe",
			"args": [
				"/d",
				"/c",
				".venv\\Scripts\\python -m pytest backend/tests/test_ranking_service.py -v --tb=short"
			],
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"group": {
				"kind": "test",
				"isDefault": false
			}
		},
		{
			"label": "Build frontend (vite)",
			"type": "shell",
			"command": "cmd.exe",
			"args": [
				"/d",
				"/c",
				"cd frontend && npm ci --no-audit --silent && npx vite build"
			],
			"problemMatcher": [
				"$eslint-stylish"
			],
			"group": "build"
		},
		{
			"label": "Docker: Build image",
			"type": "shell",
			"command": "powershell.exe",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"scripts\\build_and_push.ps1",
				"-BuildOnly"
			],
			"group": "build"
		},
		{
			"label": "Docker: Push image",
			"type": "shell",
			"command": "powershell.exe",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"scripts\\build_and_push.ps1",
				"-PushOnly"
			],
			"group": "build",
			"dependsOn": ["Docker: Build image"]
		},
		{
			"label": "Docker: Build & Push",
			"type": "shell",
			"command": "powershell.exe",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"scripts\\build_and_push.ps1"
			],
			"group": "build"
		}
	]
}