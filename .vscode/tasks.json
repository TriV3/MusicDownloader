{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run backend tests (.venv)",
			"type": "shell",
			"command": "cmd.exe",
			"args": [
				"/d",
				"/c",
				".venv\\Scripts\\python -m pytest -q backend/tests/"
			],
			"group": "test"
		},
		{
			"label": "Build frontend (vite)",
			"type": "shell",
			"command": "cmd.exe",
			"args": [
				"/d",
				"/c",
				"cd frontend && npm ci --no-audit --silent && npx vite build"
			],
			"problemMatcher": [
				"$eslint-stylish"
			],
			"group": "build"
		},
		{
			"label": "Docker: Build image",
			"type": "shell",
			"command": "powershell.exe",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"scripts\\build_and_push.ps1",
				"-BuildOnly"
			],
			"group": "build"
		},
		{
			"label": "Docker: Push image",
			"type": "shell",
			"command": "powershell.exe",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"scripts\\build_and_push.ps1",
				"-PushOnly"
			],
			"group": "build",
			"dependsOn": ["Docker: Build image"]
		},
		{
			"label": "Docker: Build & Push",
			"type": "shell",
			"command": "powershell.exe",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"scripts\\build_and_push.ps1"
			],
			"group": "build"
		}
	]
}